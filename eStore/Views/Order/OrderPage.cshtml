@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<DataAccess.Models.Order>

@{
    ViewData["Title"] = "OrderPage";
     if (HttpContextAccessor.HttpContext.Session.GetInt32("MemberID") == 0)
    {
        Layout = "_LayoutAdmin";
    }
    else
    {
        Layout = "_LayoutUser";
    }
}

<h1>Order Page</h1>

<p>
    <a asp-action="CreateOrder">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freight)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOrder", new { id=item.OrderId }) |
                @Html.ActionLink("Details", "OrderDetails", new { id=item.OrderId  }) |
                @Html.ActionLink("Delete", "DeleteOrder", new { id=item.OrderId  })
            </td>
        </tr>
}
    </tbody>
</table>
